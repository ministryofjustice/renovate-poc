{
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["gradle", "gradle-wrapper", "dockerfile", "docker-compose", "helmv3", "circleci"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "allowedVersions": "17-slim"
    },
    {
      "matchDatasources": ["orb"],
      "matchUpdateTypes": ["minor"],
      "enabled": true
    },
    {
      "matchDatasources": ["orb"],
      "matchUpdateTypes": ["major", "patch"],
      "enabled": false
    }
  ]
}
